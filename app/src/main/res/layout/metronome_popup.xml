<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FF282727">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.2"
            android:layout_marginLeft="10dp"
            android:text="BPM"
            android:textColor="#FFAAA9A9"/>
    <Button
        android:id="@+id/bpmMinus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:backgroundTint="#00000000"
        android:text="-"
        android:textColor="#FFAAA9A9"
        android:onClick="reduceBpm"/>
    <EditText
        android:id="@+id/bpmEditText"
        android:background="@android:color/background_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.2"
        android:backgroundTint="#00000000"
        android:inputType="number"
        android:textAlignment="textEnd"
        android:textColor="#FFAAA9A9"
        android:maxLength="3" />
    <Button
        android:id="@+id/bpmPlus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:backgroundTint="#00000000"
        android:text="+"
        android:textColor="#FFAAA9A9"
        android:onClick="increaseBpm"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.2"
            android:layout_marginLeft="10dp"
            android:text="Beats"
            android:textColor="#FFAAA9A9"/>
        <Button
            android:id="@+id/beatsMinus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:backgroundTint="#00000000"
            android:text="-"
            android:textColor="#FFAAA9A9"
            android:onClick="reduceBeats"/>
    <EditText
        android:id="@+id/beatsEditText"
        android:background="@android:color/background_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.2"
        android:backgroundTint="#00000000"
        android:inputType="number"
        android:textColor="#FFAAA9A9"
        android:textAlignment="textEnd"/>
        <Button
            android:id="@+id/beatsPlus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:backgroundTint="#00000000"
            android:text="+"
            android:textColor="#FFAAA9A9"
            android:onClick="increaseBeats"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.2"
            android:layout_marginLeft="10dp"
            android:text="Previous metronome"
            android:textColor="#FFAAA9A9"/>
        <Switch
            android:id="@+id/previousSw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:layout_marginRight="4dp"
            android:theme="@style/SwitchColor"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.2"
            android:layout_marginLeft="10dp"
            android:text="Metronome sound"
            android:textColor="#FFAAA9A9"/>
        <Switch
            android:id="@+id/metronomeSw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:layout_marginRight="4dp"
            android:theme="@style/SwitchColor"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <Button
                android:id="@+id/acceptBtn"
                android:text="Acept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#00000000"
                android:onClick="accept"
                android:textColor="#FFAAA9A9"/>
            <Button
                android:id="@+id/cancelBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#00000000"
                android:text="Cancel"
                android:onClick="cancel"
                android:textColor="#FFAAA9A9"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>